<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/courses/edit/{{courses.id}} " method="post">
                        <div class="form-group">
                            <input type="text"  value="{{courses.nombre_curso}}" class="form-control" name="nombre_curso" id="" placeholder="nombre del curso" autofocus>
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea name="decripcion"  class="form-control" placeholder="descripcion del curso"  rows="3">{{courses.decripcion}}</textarea>
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" value="{{courses.maestro}}" class="form-control" name="maestro" placeholder="maestro">
                        </div>
                        <br>
                        <div class="form-group">
                            <input type="text" value="{{courses.duracion}}" class="form-control" name="duracion" placeholder="duracion del curso">

                        </div>
                        <br>


                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                        
                        
                    
                    
                    
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</div>