<div class="container p-4">
    <div class="row">
        {{#each courses}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="">

                            <h3 class="card-title text-uppercase">
                                {{nombre_curso}}
                            </h3>
                            
                        </a>
                        <p class="m-2">{{decripcion}}</p>
                        <p class="m-2">{{duracion}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/courses/delete/{{id}}" class="btn btn-danger">Delete</a>
                        <a href="/courses/edit/{{id}}" class="btn btn-secondary">Edit</a>

                    </div>
                </div>
            </div>


            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay cursos a√±adidos</p>
                    <a href="/courses/add" class="btn btn-secondary">agrega uno!</a>
                </div>
            </div>
        {{/each}}


    </div>
</div>